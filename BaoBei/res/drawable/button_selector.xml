<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false">
	    <shape android:shape="rectangle" >
	     <!-- 填充的颜色 -->
	     <solid android:color="@color/jve_color_white1"></solid>
	     <!-- 设置按钮的四个角为弧形 -->
	     <!-- android:radius 弧形的半径 -->
	     <corners android:radius="@dimen/x5" />
	     <!-- padding：Button里面的文字与Button边界的间隔 -->
	     <padding android:bottom="@dimen/x2" android:left="@dimen/x2" android:right="@dimen/x2" android:top="@dimen/x2" />
       </shape>
    </item>
    <item android:state_pressed="true">
     	<shape android:shape="rectangle">
            <solid android:color="@color/jve_color_green5" />
            <corners android:radius="@dimen/x5" />
         </shape>
    </item> 

</selector>
